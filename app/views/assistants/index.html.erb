<div class="container mx-auto py-8 px-4">
  <h1 class="text-3xl font-bold mb-8">AI 助手</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @assistants.each do |assistant| %>
      <div class="bg-card border border-border rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center mr-3">
              <%= lucide_icon assistant.icon || "bot", class: "w-6 h-6 text-primary" %>
            </div>
            <h2 class="text-xl font-semibold"><%= assistant.name %></h2>
          </div>
          
          <p class="text-muted-foreground mb-6"><%= assistant.description %></p>
          
          <div class="flex justify-end">
            <%= link_to assistant_path(assistant), class: "inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none bg-primary text-primary-foreground hover:bg-primary/90 h-10 py-2 px-4" do %>
              开始对话
              <%= lucide_icon "arrow-right", class: "ml-2 w-4 h-4" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 