<!-- 站点地图表单 -->
<div class="p-6">
  <div class="mb-6">
    <h2 class="text-lg font-semibold">添加站点地图</h2>
    <p class="text-sm text-muted-foreground">添加一个网站的站点地图作为知识源</p>
  </div>

  <%= render_form_for([@current_knowledge_base, KnowledgeEntry.new], class: "space-y-4") do |form| %>
    <%= form.hidden_field :entry_type, value: "sitemap" %>

    <div class="grid grid-cols-3 items-baseline mb-4">
      <%= form.label :name, class: "text-right mr-4 text-lg" %>
      <%= form.text_field :name, 
          required: true,
          placeholder: "输入网站名称",
          class: "col-span-2" %>
    </div>

    <div class="grid grid-cols-3 items-baseline mb-4">
      <%= form.label :url, class: "text-right mr-4 text-lg" %>
      <%= form.url_field :url,
          required: true,
          placeholder: "输入站点地图地址 (sitemap.xml)",
          class: "col-span-2" %>
    </div>

    <div class="grid grid-cols-3 items-baseline">
      <%= form.label :max_pages, class: "text-right mr-4 text-lg" %>
      <%= form.number_field :max_pages,
          placeholder: "最多抓取的页面数量",
          min: 1,
          max: 1000,
          value: 100,
          class: "col-span-2" %>
    </div>

    <div class="flex justify-center pt-8">
      <%= form.button "取消", 
          type: "button",
          class: "mr-2",
          data: { action: "click->dialog#close" } %>
      <%= form.submit "添加", class: "ml-2" %>
    </div>
  <% end %>
</div>
