<!-- 目录表单 -->
<div class="p-6">
  <div class="mb-6">
    <h2 class="text-lg font-semibold">添加目录</h2>
    <p class="text-sm text-muted-foreground">添加一个本地目录作为知识源</p>
  </div>

  <%= render_form_for([@current_knowledge_base, KnowledgeEntry.new], class: "space-y-4") do |form| %>
    <%= form.hidden_field :source_type, value: :directory %>

    <div class="grid grid-cols-3 items-baseline mb-4">
      <%= form.label :title, class: "text-right mr-4 text-lg" %>
      <%= form.text_field :title, 
          required: true,
          placeholder: "输入目录名称",
          class: "col-span-2" %>
    </div>

    <div class="grid grid-cols-3 items-baseline">
      <%= form.label :source_url, class: "text-right mr-4 text-lg" %>
      <%= form.text_field :source_url,
          required: true,
          placeholder: "输入完整目录路径",
          class: "col-span-2" %>
    </div>

    <div class="flex justify-center pt-8">
      <%= form.button "取消", 
          type: "button",
          class: "mr-2",
          data: { action: "click->dialog#close" } %>
      <%= form.submit "添加", class: "ml-2" %>
    </div>
  <% end %>
</div>
