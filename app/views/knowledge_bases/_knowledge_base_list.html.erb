<div class="w-[320px] rounded-md border bg-background p-4">
  <div class="space-y-2">
    <h4 class="font-medium leading-none">选择知识库</h4>
    <p class="text-sm text-muted-foreground">选择要使用的知识库</p>
  </div>
  <div class="mt-4 space-y-2">
    <% current_user.knowledge_bases.each do |kb| %>
      <div class="flex items-center space-x-2" data-controller="tools--knowledge-base">
        <%= render_checkbox(
          label: kb.name,
          name: "kb_#{kb.id}",
          data: { 
            tools__knowledge_base_target: "checkbox",
            action: "change->tools--knowledge-base#toggleKnowledgeBase",
            kb_id: kb.id 
          }
        ) %>
      </div>
    <% end %>
  </div>
</div>
