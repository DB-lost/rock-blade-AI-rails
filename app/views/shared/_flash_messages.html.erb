<div id="flash" class="fixed top-4 right-4 z-50 flex flex-col gap-4 w-80 pointer-events-none">
  <% flash.each do |type, message| %>
    <div class="flash-message pointer-events-auto rounded-lg shadow-lg border p-4 <%= flash_class(type) %>" 
         data-controller="flash"
         data-flash-target="message"
         role="alert">
      <div class="flex items-center gap-3">
        <%= flash_icon(type) %>
        <p class="flex-1 text-sm"><%= message %></p>
        <button type="button" 
                class="rounded-lg p-1.5 hover:bg-black/5 -m-1.5"
                data-action="flash#dismiss"
                aria-label="Close">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  <% end %>
</div>
