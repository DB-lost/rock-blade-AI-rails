<div class="grid min-h-svh lg:grid-cols-2">
  <div class="relative hidden bg-muted lg:block">
    <%= image_tag "registration_bg.jpg", 
        alt: "Image", 
        class: "absolute inset-0 h-full w-full object-cover" %>
  </div>

  <div class="flex flex-col gap-4 p-6 md:p-10">
    <div class="flex justify-between items-center gap-2">
      <%= render_button "RockBlade", 
        as: :link,
        href: root_path,
        variant: :ghost,
        class: "flex items-center gap-2 font-medium" do %>
        <div class="flex h-6 w-6 items-center justify-center rounded-md bg-primary text-primary-foreground">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
            <path d="M2 20h20"/>
            <path d="M5 4v10"/>
            <path d="M19 4v10"/>
            <path d="M5 4h14"/>
            <path d="M7 8h10"/>
            <path d="M9 12h6"/>
          </svg>
        </div>
      <% end %>

      <div data-controller="theme">
        <button data-action="click->theme#toggle" class="p-2 hover:bg-accent rounded-md">
          <svg data-theme-target="darkIcon" class="hidden w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
          <svg data-theme-target="lightIcon" class="hidden w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <div class="flex flex-1 items-center justify-center">
      <div class="w-full max-w-md space-y-8">
        <div class="space-y-4">
          <h1 class="text-2xl font-bold text-center">Register your account</h1>
          <p class="text-balance text-sm text-muted-foreground text-center">
            Follow the steps to register your account
          </p>
          <%= render "steps_nav", current_step: @current_step %>
          <% if @current_step == 0 %>
            <%= render "send_sms", user: @user, notice: notice %>
          <% elsif @current_step == 1 %>
            <%= render "register_account", user: @user %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
</div>
