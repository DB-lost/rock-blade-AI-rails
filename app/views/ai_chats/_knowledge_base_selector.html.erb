<div id="knowledge-base-selector" 
     class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden"
     data-controller="knowledge-selector">
  <div class="bg-background rounded-lg shadow-lg w-full max-w-2xl max-h-[80vh] flex flex-col">
    <div class="p-4 border-b border-border flex justify-between items-center">
      <h2 class="text-lg font-semibold">选择知识库</h2>
      <button type="button" class="text-muted-foreground hover:text-foreground" data-action="knowledge-selector#close">
        <%= lucide_icon "x", class: "w-5 h-5" %>
      </button>
    </div>
    
    <div class="p-4 border-b border-border">
      <div class="relative">
        <input type="text" 
               placeholder="搜索知识库..." 
               class="w-full pl-10 pr-4 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-ring"
               data-knowledge-selector-target="searchInput"
               data-action="input->knowledge-selector#search">
        <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-muted-foreground">
          <%= lucide_icon "search", class: "w-4 h-4" %>
        </div>
      </div>
    </div>
    
    <div class="flex-1 overflow-y-auto p-4" data-knowledge-selector-target="list">
      <% if current_user.knowledge_bases.any? %>
        <div class="space-y-2">
          <% current_user.knowledge_bases.order(created_at: :desc).each do |knowledge_base| %>
            <div class="flex items-center p-3 border border-border rounded-md hover:bg-muted/50 cursor-pointer knowledge-base-item"
                 data-knowledge-base-id="<%= knowledge_base.id %>"
                 data-knowledge-base-name="<%= knowledge_base.name %>"
                 data-action="click->knowledge-selector#toggleSelection">
              <div class="w-5 h-5 border border-border rounded-md mr-3 flex items-center justify-center knowledge-base-checkbox">
                <%= lucide_icon "check", class: "w-3 h-3 hidden" %>
              </div>
              <div class="flex-1">
                <h3 class="font-medium"><%= knowledge_base.name %></h3>
                <% if knowledge_base.description.present? %>
                  <p class="text-sm text-muted-foreground line-clamp-1"><%= knowledge_base.description %></p>
                <% end %>
                <div class="text-xs text-muted-foreground mt-1">
                  <%= pluralize(knowledge_base.knowledge_entries.count, "条目") %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="mb-4">
            <%= lucide_icon "book", class: "w-12 h-12 mx-auto text-muted-foreground" %>
          </div>
          <h3 class="text-lg font-semibold mb-2">还没有创建知识库</h3>
          <p class="text-muted-foreground mb-4">请先创建知识库</p>
          <%= link_to knowledge_bases_path, class: "inline-flex items-center space-x-2 px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90" do %>
            <%= lucide_icon "plus", class: "w-4 h-4" %>
            <span>创建知识库</span>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="p-4 border-t border-border flex justify-between items-center">
      <div class="text-sm text-muted-foreground" data-knowledge-selector-target="counter">
        已选择 <span class="font-medium">0</span> 个知识库
      </div>
      <div class="flex space-x-2">
        <button type="button" 
                class="px-4 py-2 border border-border rounded-md hover:bg-muted"
                data-action="knowledge-selector#close">
          取消
        </button>
        <button type="button" 
                class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90"
                data-action="knowledge-selector#confirm">
          确认选择
        </button>
      </div>
    </div>
  </div>
</div> 