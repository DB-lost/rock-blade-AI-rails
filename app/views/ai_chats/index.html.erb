<% content_for :head do %>
  <%= tag.meta name: "last-used-assistant-id", content: @last_used_assistant&.id %>
<% end %>

<div class="h-full flex bg-background">
  <!-- 主要内容区域 -->
  <div class="flex-1 flex flex-col">
    <!-- 对话展示区域 - 只有这里可以滚动 -->
    <div class="flex-1 overflow-y-auto">
      <div id="conversation_messages" class="p-6 space-y-6">
        <% if @current_conversation&.messages&.any? %>
          <%= render partial: "messages/#{message.role}_message", collection: @current_conversation.messages.ordered, as: :message %>
        <% else %>
          <div class="text-center text-muted-foreground p-4">
            开始新的对话...
          </div>
        <% end %>
      </div>
    </div>

    <!-- 固定底部编辑工具栏 -->
    <div class="flex-shrink-0 border-t border-border bg-background p-4">
      <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-2 border-r border-border pr-4">
          <button class="p-2 hover:bg-muted rounded">
            <%= lucide_icon "bold", class: "w-5 h-5" %>
          </button>
          <button class="p-2 hover:bg-muted rounded">
            <%= lucide_icon "italic", class: "w-5 h-5" %>
          </button>
          <button class="p-2 hover:bg-muted rounded">
            <%= lucide_icon "list", class: "w-5 h-5" %>
          </button>
          <button class="p-2 hover:bg-muted rounded">
            <%= lucide_icon "heading", class: "w-5 h-5" %>
          </button>
          <button class="p-2 hover:bg-muted rounded">
            <%= lucide_icon "link", class: "w-5 h-5" %>
          </button>
        </div>
        <div class="flex-1">
          <div class="relative">
            <textarea rows="1" class="w-full bg-muted rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-ring" placeholder="输入消息..."></textarea>
            <button class="absolute right-2 top-1/2 transform -translate-y-1/2 p-2 hover:bg-muted rounded">
              <%= lucide_icon "send", class: "w-5 h-5" %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 固定右侧边栏 -->
  <div class="w-64 bg-muted/50 border-l border-border flex flex-col flex-shrink-0">
    <div class="p-4 border-b border-border">
      <div class="flex items-center justify-between">
        <h2 class="font-semibold text-lg">AI 助手</h2>
      </div>
    </div>
    
    <%= render "ai_chats/assistants/assistants" %>
    
    <div class="p-4 border-t border-border">
      <%= render_dialog do %>
        <%= dialog_trigger do %>
          <%= render_button class: "w-full flex items-center justify-center space-x-2 p-2 bg-primary text-primary-foreground rounded hover:bg-primary/90" do %>
            <%= lucide_icon "plus", class: "w-4 h-4" %>
            <span>添加助手</span>
          <% end %>
        <% end %>
        <%= dialog_content do %>
          <%= render "ai_chats/assistants/form", assistant: nil %>
        <% end %>
      <% end %>
    </div>
  </div>
