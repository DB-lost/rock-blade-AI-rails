<%= render_form_for(conversation || Conversation.new, class: "w-full pt-4 pr-8") do |form| %>
  <div class="grid grid-cols-3 items-baseline mb-4">
    <%= form.label :title, class: "text-right mr-4 text-lg" %>
    <%= form.text_field :title, required: true, class: "col-span-2" %>
  </div>
  <div class="flex justify-center">
    <% if conversation&.persisted? %>
      <%= form.submit "更新对话", method: :patch, class: "mr-2" %>
    <% else %>
      <%= form.submit "创建对话", class: "mr-2" %>
    <% end %>
  </div>
<% end %>
